<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/darkergrey" />
            <size android:width="100dp" android:height="100dp"></size>
            <stroke android:width="1dp" android:color="@color/white" />
        </shape>
    </item>


    <item android:gravity="center"
        android:start="14dp"
        android:end="14dp"
        android:top="14dp"
        android:bottom="14dp">

        <rotate android:fromDegrees="-45">
            <shape android:shape="rectangle" >
                <solid android:color="@color/holo_red_light"/>
                <size android:width="5dp" android:height="50dp"></size>
            </shape>
        </rotate>
    </item>
    <item android:gravity="center"
        android:start="14dp"
        android:end="14dp"
        android:top="14dp"
        android:bottom="14dp">

        <rotate android:fromDegrees="45">
            <shape android:shape="rectangle" >
                <solid android:color="@color/holo_red_light"/>
                <size android:width="5dp" android:height="50dp"></size>
            </shape>
        </rotate>
    </item>

</layer-list>